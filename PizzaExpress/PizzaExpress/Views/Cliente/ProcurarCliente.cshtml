@model IEnumerable<PizzaExpress.Models.Cliente>

@{
    ViewBag.Title = "ProcurarCliente";
}


<div id="divlistaclientes">
<p>
    @Html.ActionLink("Cadastrar novo cliente", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.IdCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TelefoneCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rua)
