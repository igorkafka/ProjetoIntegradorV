@model PizzaExpress.Models.Pedido

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Pedido</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.NumPedido, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.NumPedido, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.NumPedido)
            </div>
        </div>

       

     

        

        <div class="form-group">
            @Html.LabelFor(model => model.StatusPedido, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.StatusPedido, new List<SelectListItem>() { new SelectListItem() { Text = "Aberto", Value = "Aberto" }, new SelectListItem() { Text = "Fechado", Value = "Fechado" } }, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StatusPedido, "", new { @class = "text-danger" })
            </div>
        </div>

     

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
