@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
            
                @Html.ActionLink("Olá " + User.Identity.GetUserName() + "   ", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
          
            <a href="javascript:document.getElementById('logoutForm').submit()">Sair</a>
            </nav>
    }
}
else
{
    <nav class="navbar navbar-light" style="background-color: #e3f2fd;">

        @Html.ActionLink("Registrar-se", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
        @Html.ActionLink("Logar", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
    </nav>
}
